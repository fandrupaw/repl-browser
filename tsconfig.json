{
  "compilerOptions": {
    "moduleResolution": "node",
    "removeComments": false,
    "target": "ES5",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "module": "esnext",
    "noEmitOnError": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": false
  },
  "paths": {
    "src/*": ["src/*"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
